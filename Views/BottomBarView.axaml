<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CrossMediaPlayer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CrossMediaPlayer.Views.BottomBarView"
             x:DataType="vm:BottomBarViewModel"
             Background="White">
    
    <UserControl.Styles>
        <StyleInclude Source="/Styles/ControlsStyles.axaml"/>
    </UserControl.Styles>
    
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Slider Classes="seekSlider"
                Margin="0,-15,0,0"
                HorizontalAlignment="Stretch"
                Height="35"
                Foreground="#A0E4FF"
                Value="{Binding MediaSeekPosition, Mode=TwoWay}"
                IsEnabled="{Binding EnableSeeking}">
        </Slider>
        
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,-17,0,15">
            <TextBlock FontSize="11"
                       Margin="5,0,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       IsHitTestVisible="False"
                       Text="{Binding MediaPlayingTime}">--:--</TextBlock>
    
            <TextBlock FontSize="11"
                       Margin="0,0,5,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       IsHitTestVisible="False"
                       Text="{Binding MediaLength}">--:--</TextBlock>
    
            <TextBlock FontSize="11"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       IsHitTestVisible="False"
                       Text="{Binding CurrentlyPlayingMedia}">now playing</TextBlock>
        </Grid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0,-10,0,0">
        
            <Canvas Width="160" Height="40" Margin="0,10,0,0">
                <TextBlock Text="{Binding TranslationService[BottomBar.PlayModeLabel]}"
                           FontSize="11"
                           FontWeight="Bold"
                           Canvas.Left="55" 
                           Canvas.Top="-8"
                           Width="50"
                           TextAlignment="Center"/>
                <TextBlock Text="{Binding TranslationService[BottomBar.NormalToggle]}"
                           FontSize="10"
                           Canvas.Left="-20" 
                           Canvas.Top="19"
                           Width="50"
                           TextAlignment="Center"/>
                <TextBlock Text="{Binding TranslationService[BottomBar.LoopToggle]}"
                           FontSize="10"
                           Canvas.Left="55" 
                           Canvas.Top="19"
                           Width="50"
                           TextAlignment="Center"/>
                <TextBlock Text="{Binding TranslationService[BottomBar.RandomToggle]}"
                           FontSize="10"
                           Canvas.Left="130" 
                           Canvas.Top="19"
                           Width="50"
                           TextAlignment="Center"/>
    
                <Slider Classes="customSlider" 
                        Canvas.Left="1" 
                        Canvas.Top="-8" 
                        Width="160"
                        Value="0"
                        Minimum="0"
                        Maximum="100"
                        TickFrequency="50"
                        IsSnapToTickEnabled="True"
                        Ticks="0, 50, 100"/>
            </Canvas>
        
            <!-- Back Button -->
            <Button Width="42" Height="25" Margin="80,8,0,25">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Panel>
                            <!-- Parallelogram pointing left -->
                            <Polygon Points="10,0 42,0 32,25 0,25"
                                     Fill="#F6F6F6"
                                     Stroke="Gray"
                                     StrokeThickness="1"/>
                            <ContentPresenter x:Name="PartContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Panel>
                    </ControlTemplate>
                </Button.Template>
                <Panel Margin="5,2,0,0">
                    <Rectangle Width="2" Height="10" Fill="Black" Margin="-14,0,0,0"/>
                    <Path Data="M 10,0 L 10,12 L 2,6 Z" 
                          Fill="Black" 
                          Width="10" 
                          Height="10"
                          Stretch="Uniform"
                          Margin="0,0,0,0"/>
                </Panel>
            </Button>
        
        <!-- Play Button -->
        <Button Width="60" Height="60" Background="LightGray" Margin="0,8,0,0" Command="{Binding PlayButton}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Panel>
                        <Polygon Points="15,5 45,5 55,30 30,50 5,30"
                                 Fill="#F6F6F6"
                                 Stroke="Gray"
                                 StrokeThickness="1"/>
                        <ContentPresenter x:Name="PartContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Panel>
                </ControlTemplate>
            </Button.Template>
            <Path Data="{Binding PlayButtonIconPathData}"
                  Fill="Black" 
                  Width="16" 
                  Height="16"
                  Stretch="Uniform"
                  Margin="0,0,0,10"/>
        </Button>
        
            <!-- Next Button -->
            <Button Width="42" Height="25" Margin="0,8,80,25">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Panel>
                            <Polygon Points="0,0 32,0 42,25 10,25"
                                     Fill="#F6F6F6"
                                     Stroke="Gray"
                                     StrokeThickness="1"/>
                            <ContentPresenter x:Name="PartContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Panel>
                    </ControlTemplate>
                </Button.Template>
                <Panel Margin="0,2,0,0">
                    <Path Data="M 0,0 L 8,6 L 0,12 Z" 
                          Fill="Black" 
                          Width="10" 
                          Height="10"
                          Stretch="Uniform"
                          Margin="0,0,0,0"/>
                    <Rectangle Width="2" Height="10" Fill="Black" Margin="6,0,0,0"/>
                </Panel>
            </Button>
        
        <!-- Volume Slider -->
        <Canvas Width="160" Height="40" Margin="0,10,0,0">
            <TextBlock Text="{Binding TranslationService[BottomBar.VolumeLabel]}" FontSize="11" FontWeight="Bold"
                       Canvas.Left="60" 
                       Canvas.Top="-8"
                       Width="50"
                       TextAlignment="Center"/>
            <TextBlock Text="0%" FontSize="10"
                       Canvas.Left="-3" 
                       Canvas.Top="19"/>
            <TextBlock Text="100%" FontSize="10"
                       Canvas.Left="147" 
                       Canvas.Top="19"/>
            
            <Slider Classes="customSlider"
                    Canvas.Left="1" 
                    Canvas.Top="-8" 
                    Width="160"
                    Value="{Binding Volume}"/>
        </Canvas>
    </StackPanel>
    </StackPanel>
    
</UserControl>