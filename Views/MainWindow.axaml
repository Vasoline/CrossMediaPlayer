<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CrossMediaPlayer.ViewModels"
        xmlns:views="using:CrossMediaPlayer.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:CrossMediaPlayer.Views.Pages"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        Width="1000" Height="600"
        MinWidth="800" MinHeight="500"
        x:Class="CrossMediaPlayer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Icon2.png"
        Title="Cross Media Player">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
    </Window.Styles>

    <DockPanel>
        <Border DockPanel.Dock="Top" 
                Height="35" 
                Background="#2B2B2B"
                BorderBrush="#3E3E3E"
                BorderThickness="0,0,0,1">
            <views:TopBarView />
        </Border>
        
        <Border DockPanel.Dock="Bottom" 
                Height="90" 
                Background="#2B2B2B"
                BorderBrush="#3E3E3E">
            <views:BottomBarView />
        </Border>
        
        <Border DockPanel.Dock="Left" 
                Width="200" 
                Background="#252525"
                BorderBrush="#3E3E3E"
                BorderThickness="0,0,1,0">
            <views:SideBarView />
        </Border>
        
        <Border Background="#1E1E1E">
            <TransitioningContentControl Content="{Binding CurrentlySelectedContentsPage}">
                <TransitioningContentControl.PageTransition>
                    <CrossFade Duration="0:00:00.3" />
                </TransitioningContentControl.PageTransition>
            </TransitioningContentControl>
        </Border>
    </DockPanel>

</Window>